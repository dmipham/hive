<div class="jumbotron">
	
	<div class="row-fluid">
		
		<div class="span8">
			
			<iframe width="700" height="315" src="//www.youtube.com/embed/sSk_ev1eZec" frameborder="0" allowfullscreen align="right"></iframe>
			
		</div>
		
		<div class="span4">
			<h4>Sign In</h4>
			<%= form_for("user", :url => user_session_path) do |f| %>
	  		<%= f.text_field :email, placeholder: "Email" %><br>
	 		 	<%= f.password_field :password, placeholder: "Password"%><br>
				<%= f.check_box :remember_me %>
				<%= f.label :remember_me %>
				<%= f.submit 'Sign in' %>
			<% end %>
			<%= link_to "Forgot your password?", new_password_path('user') %><p>
			<button class="btn btn-large btn-info honey"><%= link_to "Join Today", new_user_registration_path %></button>
		</div>
		
	</div>
	
</div>


