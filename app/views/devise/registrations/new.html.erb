<div class="container">
<h2>Sign up</h2>

<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
  <%= devise_error_messages! %>
	
	<legend>Create your Log In</legend>

  <div class="form-horizontal"><%= f.label :email %>
  <%= f.email_field :email, :autofocus => true %></div>

  <div class="form-horizontal"><%= f.label :password %>
  <%= f.password_field :password %></div>

  <div class="form-horizontal"><%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></div>
	
	<legend>Basic Info</legend>
	<div class="row-fluid">
		<div class="span4">
			<div class="form-horizontal">
				<label>First Name</label>
					<%= f.text_field :first_name, placeholder: "First Name" %>
				<label>Last Name</label>
					<%= f.text_field :last_name, placeholder: "Last Name" %>
			</div>
			<br>
			<div class="form-horizontal">
				<label>Phone Number</label>
				<%= f.text_field :phone, placeholder: "Phone Number" %>
			</div>
			<br>
			<div>
				<label><b>I want to be a</b></label>
				<label class="radio"><%= f.radio_button :role, "Keeper" %> Beekeeper</label>
				<label class="radio"><%= f.radio_button :role, "Worker" %> Worker Bee</label>
			</div>
		</div>
	<div class="span4">
		<div class="form-horizontal">
			<label>Address Line One</label>
			<%= f.text_field :address_1, placeholder: "Address Line One"%>
			<label>Address Line Two</label>
			<%= f.text_field :address_2, placeholder: "Address Line Two" %>
		</div>
		<br>
		<div class="form-horizontal">
			<label>City</label>
			<%= f.text_field :city, placeholder: "City" %>
			<label>State</label>
			<%= f.text_field :state, placeholder: "State" %>
			<label>Zip Code</label>
			<%= f.text_field :zip_code, placeholder: "Zip Code"%>
		</div>
	</div>
</div>
		<br>
  <div><%= f.submit "Sign Me Up" %></div>
<% end %>

<%= render "devise/shared/links" %>

</div>

<br>
